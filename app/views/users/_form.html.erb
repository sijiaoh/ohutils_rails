<%= form_with(model: user, class: "contents") do |form| %>
  <% if user.errors.any? %>
    <div class="scaffold-errors my-default">
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="horizontal my-default">
    <%= form.label :name %>
    <%= form.text_field :name, class: "text-field" %>
  </div>
  <% if ["new", "create"].include? action_name %>
    <div class="horizontal my-default">
      <%= form.check_box :terms_of_service %>
      <%= form.label :terms_of_service, User.human_attribute_name(:terms_of_service) %>
    </div>
  <% end %>

  <div>
    <%= form.submit class: "button-primary my-default" %>
  </div>
<% end %>
