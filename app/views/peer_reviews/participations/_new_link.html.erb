<%
  if policy(peer_review).show? &&
    policy([:peer_reviews, :participation]).new? &&
    peer_review.status.doing? &&
    peer_review.participants.exclude?(current_user)
%>
  <%= link_to(
    t("peer_reviews.participations.new.title"),
    [:new, peer_review, :peer_reviews_participation],
    class: "button-primary"
  ) %>
<% end %>
