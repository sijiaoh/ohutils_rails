<div>
  <div class="flex justify-between items-center">
    <h1 class="title my-default"><%= title t ".title" %></h1>
    <%= render "new_link", peer_review: @peer_review %>
  </div>

  <%= turbo_frame_tag :participations do %>
    <% if @self_peer_reviews_participation.present? %>
      <%= render(
        "index_self_peer_reviews_participation",
        peer_reviews_participation: @self_peer_reviews_participation
      ) %>
    <% end %>
    <%= render(
      partial: "index_not_reviewed_peer_reviews_participation",
      collection: @not_reviewed_peer_reviews_participations,
      as: :peer_reviews_participation
    ) %>
    <% @reviewed_peer_reviews_participations.each do |reviewed_peer_reviews_participation| %>
      <%= render(
        "index_reviewed_peer_reviews_participation",
        peer_reviews_participation: reviewed_peer_reviews_participation,
        self_peer_reviews_participation: @self_peer_reviews_participation,
      ) %>
    <% end %>
  <% end %>
</div>
