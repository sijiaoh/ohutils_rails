<div id="<%= dom_id space %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= space.slug %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= space.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this space", space, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this space', edit_space_path(space), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
